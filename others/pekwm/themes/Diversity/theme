      FocusedSelected = "#bfe0ff"
      Unfocused = "#ffffff"
      UnfocusedSelected = "#ffffff"
    }

    Buttons {
      // Use these as you need. Remove what you don't need.
      // If you aren't using any buttons, Just remove everything,
      // But keep the Buttons {} section.
      
      // close button
      Right {
        Focused = "Image btn.png"
        Unfocused = "Image btn-un.png"
        Pressed = "Image btn-un.png"
        Button = "1" { Actions = "Close" }
      }

      // maximize button
      Right {
        Focused = "Image btn.png"
        Unfocused = "Image btn-un.png"
