// i prefere artwiz font-package from aleczapka
// http://artwizaleczapka.sourceforge.net/
$TAB_FO         = "nu.de#LEFT"             // Focused titlebar font
$TAB_FS         = "nu.de#LEFT"             // Focused-Selected titlebar font
$TAB_UN         = "nu.de#LEFT"             // Unfocused titlebar font
$TAB_US         = "nu.de#LEFT"             // Unfocused-Selected titlebar fnt
$MENU_FONT      = "nu.de#LEFT"             // Font for menu items
$STATUS_FONT    = "nu.de#CENTER"           // Status window font
$CMD_FONT       = "nu.de#LEFT"             // CMDDIALOG font

