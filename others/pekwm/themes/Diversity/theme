// $TAB_UN         = "Verdana-10#Left#XFT"     // Unfocused titlebar font
// $TAB_US         = "Verdana-10#Left#XFT"     // Unfocused-Selected titlebar font
// $MENU_FONT      = "Arial-10#LEFT#XFT"       // Font for menu items
// $STATUS_FONT    = "Arial-8#CENTER#XFT"      // Status window font
