	TextColorSelected = "#000000"
	TextColorTitle = "#ffffff #285a8e"
	Background = "#f7f7f7"
	BackgroundFocused = "#f7f7f7"
	BackgroundSelected = "#7bb6ef"
	BackgroundTitle = "#4a92d6"
	BorderColor = "#000000"
}
