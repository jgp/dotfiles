# I'm not exactly what/where this theme originally is.
# It's based on a Waimea screenshot at http://freedesktop.org/Software/waimea ,
# so we'll call it Waimea-Cairo.
#
# Having rounded bottoms enabled will look odd on shaded windows because the
# side borders will fill into the transparency of the corners.


Decor {     
            
Decor = "DEFAULT" {
	TitleHeight = "20"
	TitlePadding = "3"

    Font = "Arial-10:bold#XFT" {
	  # Original is Left
      Justify = "Center"
	  Offset = "1 1"
	}
	Focused {
		Text = "#ececec #3982ce"
		Pixmap = "title-fo.png:Tiled"

		Separator = "sep-fo.png:Fixed"
		Border {
			Top = "tl-sh-fo.png top-fo.png tr-sh-fo.png"
			Side = "left-fo.png right-fo.png"

			# Shaped bottoms:
			Bottom = "bl-sh-fo.png bottom-fo.png br-sh-fo.png"

			# Squared bottoms:
			#Bottom = "bl-sq-fo.png bottom-fo.png br-sq-fo.png"
		}
	}
	Selected {
		Text = "#ffffff #285a8e"
		Pixmap = "title-fo.png"
	}
	Unfocused {
		Text = "#cccccc"
		Pixmap = "title-un.png:Tiled"
		Separator = "sep-un.png"
		Border {
			Top = "tl-sh-un.png top-un.png tr-sh-un.png"
			Side = "left-un.png right-un.png"

			# Shaped bottoms:
			Bottom = "bl-sh-un.png bottom-un.png br-sh-un.png"

			# Squared bottoms:
			#Bottom = "bl-sq-un.png bottom-un.png br-sq-un.png"
		}
	}
	UnfocusedSelected {
		Text = "#979797"
		Pixmap = "title-un.png"
	}
									
	Buttons {


		#// Close button
		Right {
			Button = "1" { Actions = "Close" }
			Pixmaps = "btn-close-fo.png btn-close-un.png btn-close-pr.png"
		}

	}
}}

Harbour {
	Pixmap = "harbour.png:Scaled"
}

Menu {
  Font = "Arial-10#XFT" {
    Justify = "Left"
  }
  TitleFont = "Arial-10:bold#XFT" {
    Justify = "Center"
	Offset "1 1"
  }
	Padding = "4"
	BorderWidth = "2"
	TextJustify = "Left"
	TextColor = "#2c2c2c"
