Decor = "DEFAULT" {
	Title {
		Height = "17"
		Pad = "3 5 5 3"

		Focused = "Image title-fo.xpm"
		Unfocused = "Image title-un.xpm"

		WidthMin = "0"
		WidthMax = "100"
		WidthSymetric = "True"

		Tab {
			Focused = "Image title-fo.xpm"
			FocusedSelected = "Image title-fo.xpm"
			Unfocused = "Image title-un.xpm"
			UnfocusedSelected = "Image title-un.xpm"
		}
		Separator {
			Focused = "Image sep-fo.xpm"
			Unfocused = "Image sep-un.xpm"
		}
		Font {
			Focused = "$TAB_FO"
			FocusedSelected = "$TAB_FS"
			Unfocused = "$TAB_UN"
			UnfocusedSelected = "$TAB_US"
		}
		FontColor {
			Focused = "#d9d9d9"
			FocusedSelected = "#ffffff"
			Unfocused = "#575757"
			UnfocusedSelected = "#444444"
		}
		Buttons {
			Right {
				Focused = "Image title-decor-fo.xpm"
				Unfocused = "Image title-decor-un.xpm"
				Pressed = "Image title-decor-fo.xpm"
				Button = "1" { Actions = "EMPTY" }
			}
			Right {
				Focused = "Image close-fo.xpm"
				Unfocused = "Image close-un.xpm"
				Pressed = "Image close-pr.xpm"
				Button = "1" { Actions = "Close" }
			}
			Right {
				Focused = "Image max-fo.xpm"
				Unfocused = "Image max-un.xpm"
				Pressed = "Image max-pr.xpm"
				Button = "1" { Actions = "Toggle Maximized 1 1" }
			}
			Right {
				Focused = "Image min-fo.xpm"
				Unfocused = "Image min-un.xpm"
				Pressed = "Image min-pr.xpm"
				Button = "1" { Actions = "Set Iconified" }
			}
		}
		Border {
			Focused {
				TopLeft = "Image tl-fo.xpm"
				Top = "Solid #000000 1x1"
				TopRight = "Solid #000000 1x1"
