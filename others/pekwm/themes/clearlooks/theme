$TAB_FO			= "Verdana-7:bold#CENTER#1 0#XFT"		// Focused titlebar font
$TAB_FS			= "Verdana-7:bold#CENTER#1 0#XFT"		// Focused-Selected titlebar font
$TAB_UN			= "Verdana-7:bold#CENTER#1 0#XFT"		// Unfocused titlebar font
$TAB_US			= "Verdana-7:bold#CENTER#1 0#XFT"		// Unfocused-Selected titlebar font
$MENU_FONT		= "Verdana-7#LEFT#XFT"		// Font for menu items
$STATUS_FONT	= "Verdana-7#CENTER#XFT"		// Status window font
$CMD_FONT		= "Verdana-7#LEFT#XFT"		// CMDDIALOG font


