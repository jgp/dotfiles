				BottomLeft = "Image bl-fo.xpm"
				Bottom = "Image bottom-fo.xpm"
				BottomRight = "Image br-fo.xpm"
			}
			Unfocused {
				TopLeft = "Image tl-un.xpm"
				Top = "Solid #000000 1x1"
				TopRight = "Solid #000000 1x1"
				Left =  "Solid #000000 1x1"
				Right = "Solid #000000 1x1"
				BottomLeft = "Image bl-un.xpm"
				Bottom = "Image bottom-un.xpm"
				BottomRight = "Image br-un.xpm"
			}
		}
	}
} # Decor->DEFAULT{}

